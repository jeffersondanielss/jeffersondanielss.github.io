.header
  height: banner-height
  position: relative
  border-bottom: 1px solid color-border
  position: relative
  overflow: hidden
  
.header__bg
  position: absolute
  width: 100%
  height: 100%
  background-image: url("../images/header-background.jpg")
  background-color: color-primary
  background-size: 100%
  background-position: center top
  background-repeat: no-repeat
  z-index: -1;
  transform: scale(1)
  
  @media screen and (max-width: 900px)
    background-size: cover
    background-position: center
    
.header__bg
  animation-name: pulse
  animation-duration: 50s
  transform-origin: 50%
  animation-timing-function: linear
  animation-iteration-count: infinite;

@keyframes pulse
  0%
    transform:scale(1.2)
  50%
    transform:scale(1)
  100%
    transform:scale(1.2)


    
.github:before 
  content: "\f09b"
  font-family: FontAwesome
  font-size: 30px
  font-style: normal
  position: relative
  top: 4px
  text-shadow: 0 1px 3px rgba(0, 0, 0, 0.7)

.header__title
  padding-top: 30px
  height: logo-size
  text-transform: uppercase
  display: inline-block
  float: left

$logo-text
  text-decoration: none
  color: #fff
  font-weight: 300
  text-shadow: 0 1px 3px rgba(0, 0, 0, 0.7)

#logo
  @extend $logo-text
  font-size: logo-size
  line-height: logo-size
  letter-spacing: 2px

.menu
  float: right
  padding-top: 30px
  text-transform: uppercase
  
  &__link
    padding: 0 10px
    color: #FFFFFF
    text-decoration: none